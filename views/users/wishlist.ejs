<%- include('../userLayouts/userhead.ejs') %>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <style>
    body {
        font-family: 'Open Sans', sans-serif;
        margin: 0;
        padding: 0;
    }

    .cart-wrap {
        padding: 40px 0;
        background-color: #f8f9fa;
    }

    .wishlist-box {
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .main-heading {
        font-size: 24px;
        font-weight: bold;
        color: #212529;
        margin-bottom: 20px;
    }

    .table-wishlist table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .table-wishlist th, .table-wishlist td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #e5e5e5;
    }

    .table-wishlist th {
        font-size: 16px;
        font-weight: 600;
        color: #484848;
    }

    .table-wishlist .img-product img {
        width: 72px;
        height: auto;
        border-radius: 5px;
    }

    .table-wishlist .name-product {
        font-size: 16px;
        color: #212529;
    }

    .table-wishlist .price {
        font-weight: 600;
        color: #8660e9;
    }

    .table-wishlist .in-stock-box {
        background-color: #28a745;
        font-size: 14px;
        text-align: center;
        border-radius: 25px;
        padding: 5px 15px;
        color: #fff;
        display: inline-block;
    }

    .table-wishlist .add-to-cart-btn {
        display: block;
        margin-top: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .table-wishlist .add-to-cart-btn:hover {
        background-color: #0056b3;
    }

    .table-wishlist .remove-btn {
        display: block;
        margin-top: 10px;
        color: #dc3545;
        background: none;
        border: none;
        cursor: pointer;
        transition: color 0.3s ease;
    }

    .table-wishlist .remove-btn:hover {
        color: #bd2130;
    }
</style>

    

    <div class="mt-5 ms-5">
        <a href="/viewProductDetails" class="btn btn-dark">BACK</a>
    </div>

    <div class="cart-wrap">
        <div class="container">
            <div class="wishlist-box">
                <div class="row">
                    <div class="col-md-12">
                        <div class="main-heading mb-10">My wishlist</div>
    
                        <% if (message) { %>
                            <p><%= message %></p>
                        <% } else { %>
                            <div class="table-wishlist">
                                <table class="table" cellspacing="0" border="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th width="30%">Product Name</th>
                                            <th width="20%">Unit Price</th>
                                            <th width="15%">Stock Status</th>
                                            <th width="15%">Add to Cart</th>
                                            <th width="10%">Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (wishlist && wishlist.length > 0) { %>
                                            <% wishlist.forEach(product => { %>
                                                <tr>
                                                    <td width="30%">
                                                        <div class="d-flex align-items-center">
                                                            <div class="img-product">
                                                                <% if (product && product.image && product.image.length > 0) { %>
                                                                    <img src="/public/productImage/<%= product.image[0] %>" alt="Product Image" class="img-fluid">
                                                                <% } else { %>
                                                                    <img src="/path/to/default/image.jpg" alt="Default Image" class="img-fluid">
                                                                <% } %>
                                                            </div>
                                                            <div class="name-product ms-3">
                                                                <%= product.name || 'Product Name Not Available' %>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td width="20%" class="price">RS.<%= product.price !== undefined ? product.price.toFixed(2) : 'N/A' %></td>
                                                    <td width="15%"><span class="in-stock-box">In Stock</span></td>
                                                    <td width="15%"><a href="/add-to-cart/<%= product._id %>"><button class="btn btn-primary">Add to Cart</button></a></td>
                                                    <td width="10%" class="text-center">
                                                        <a href="/remove-from-wishlist/<%= product._id %>">
                                                            <img src="/public/photo/closs.png" width="20px" height="20px" alt="Remove from Wishlist">
                                                        </a>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="5" class="text-center">No products found in the wishlist</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../userLayouts/userFoot.ejs') %>